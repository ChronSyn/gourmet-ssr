{
  "name": "@gourmet/test-render-error",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "build": "gourmet build",
    "watch": "node lib/server.js --watch",
    "test": "npm run test:local && npm run test:prod && npm run test:ltc",
    "test:local": "gourmet build -v 1 && tape test/*_test.js -v 0",
    "test:prod": "gourmet build -v 1 --stage prod && tape test/*_test.js --stage prod -v 0",
    "test:ltc": "gourmet build -v 1 --stage ltc && tape test/*_test.js --stage ltc -v 0"
  },
  "dependencies": {
    "@gourmet/client-lib": "^1.0.0",
    "@gourmet/server-args": "^0.6.0",
    "@gourmet/console": "^1.0.0",
    "express": "^4.16.3",
    "morgan": "^1.9.0"
  },
  "devDependencies": {
    "@gourmet/gourmet-cli": "^1.0.0",
    "@gourmet/preset-react-emotion": "^1.0.0",
    "@gourmet/promise-tape": "^0.3.0",
    "got": "^8.3.1",
    "puppeteer": "^1.3.0",
    "react": "16.6.1 || ^16.6.4",
    "react-dom": "16.6.1 || ^16.6.4",
    "tape": "^4.9.0"
  }
}
