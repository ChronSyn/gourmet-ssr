{
  "name": "@gourmet/test-news",
  "version": "0.12.0",
  "private": true,
  "scripts": {
    "watch": "node lib/server.js --watch",
    "start": "node lib/server.js",
    "build": "gourmet build",
    "test": "npm run test:local && npm run test:prod && npm run test:ltc",
    "test:local": "gourmet build --verbose 1 && tape test/*_test.js",
    "test:prod": "gourmet build --verbose 1 --stage prod && tape test/*_test.js --stage prod",
    "test:ltc": "gourmet build --verbose 1 --stage ltc && tape test/*_test.js --stage ltc"
  },
  "dependencies": {
    "@gourmet/client-lib": "^0.8.0",
    "@gourmet/server-args": "^0.6.0",
    "express": "^4.16.3",
    "got": "^8.3.1",
    "morgan": "^1.9.0"
  },
  "devDependencies": {
    "@gourmet/gourmet-cli": "^0.7.0",
    "@gourmet/preset-react-emotion": "^0.12.0",
    "@gourmet/promise-tape": "^0.3.0",
    "@gourmet/puppeteer-args": "^0.4.0",
    "@gourmet/test-news-view": "^0.6.0",
    "puppeteer": "^1.3.0",
    "react": "^16.6.3",
    "react-dom": "^16.6.3",
    "tape": "^4.9.0"
  }
}
