{
  "name": "@gourmet/test-react-hello",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "build": "gourmet build",
    "watch": "node lib/local.js --watch",
    "test": "npm run test:local && npm run test:prod && npm run test:ltc",
    "test:local": "gourmet build --verbosity 1 && tape test/*_test.js",
    "test:prod": "gourmet build --verbosity 1 --stage prod && tape test/*_test.js --stage prod",
    "test:ltc": "gourmet build --verbosity 1 --stage ltc && tape test/*_test.js --stage ltc"
  },
  "dependencies": {
    "@gourmet/client-http": "^1.0.0",
    "@gourmet/client-lib": "^1.0.0",
    "@gourmet/server-args": "^0.6.0",
    "express": "^4.16.3",
    "morgan": "^1.9.0",
    "react": "^16.6.3",
    "react-dom": "^16.6.3"
  },
  "devDependencies": {
    "@gourmet/gourmet-cli": "^1.0.0",
    "@gourmet/http-server": "^1.0.0",
    "@gourmet/preset-react": "^1.0.0",
    "@gourmet/promise-tape": "^0.3.0",
    "puppeteer": "^1.3.0",
    "tape": "^4.9.0"
  }
}
